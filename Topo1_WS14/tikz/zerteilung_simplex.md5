\begingroup \toks 0={macro:->[scale=4.0, rotate=200] \coordinate (a) at (0,0); \coordinate (b) at (1,0); \coordinate (c) at (60:1); \par \draw [thick] (a) -- (b) -- (c) -- cycle; \par \coordinate (ab) at ($(a)!.5!(b)$); \coordinate (ac) at ($(a)!.5!(c)$); \coordinate (bc) at ($(b)!.5!(c)$); \par \draw [darkgray,thick, name path=erster] (a) -- (bc); \draw [darkgray,thick, name path=zweiter] (b) -- (ac); \draw [darkgray, thick] (c) -- (ab); \path [name intersections={of=erster and zweiter, name=i}] (i-1) coordinate (m); \par \coordinate (aab) at ($(a)!.5!(ab)$); \coordinate (am) at ($(a)!.5!(m)$); \coordinate (abm) at ($(ab)!.5!(m)$); \coordinate (abb) at ($(ab)!.5!(b)$); \coordinate (bm) at ($(b)!.5!(m)$); \par \draw [gray, thick, name path=dritter] (a) -- (abm); \draw [gray, thick, name path=vierter] (ab) -- (am); \draw [gray, thick] (m) -- (aab); \path [name intersections={of=dritter and vierter, name=i}] (i-1) coordinate (m1); \par \draw [gray, thick, name path=fuenfter] (b) -- (abm); \draw [gray, thick, name path=sechster] (m) -- (abb); \draw [gray, thick] (ab) -- (bm); \path [name intersections={of=fuenfter and sechster, name=i}] (i-1) coordinate (m2); \par \par \foreach \x in {am,bm,abm,aab,abb}{ \draw [thick,fill=IndianRed2] (\x ) circle[radius=0.01]; } \foreach \x in {a,b,c}{ \draw [thick,fill=DodgerBlue2] (\x ) circle[radius=0.015]; } \foreach \x in {ab,bc,ac}{ \draw [thick,fill=SeaGreen3] (\x ) circle[radius=0.015]; } \draw [thick,fill=Yellow2] (m) circle[radius=0.015]; \foreach \x in {m1,m2}{ \draw [thick,fill=PaleTurquoise2] (\x ) circle[radius=0.01]; } }\xdef \tikzexternallastkey {\the \toks 0 }\endgroup %
